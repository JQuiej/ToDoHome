<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/text"
        android:layout_width="384dp"
        android:layout_height="699dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="29dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:text="@string/AddFamily"
            android:textColor="@color/background_highlight"
            android:textSize="30sp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/data"
            android:textColor="@color/background_highlight"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                android:text="Rol"
                android:textColor="@color/background_highlight"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/background_highlight"
                    android:text="Padre o Madre"
                    android:textColor="@color/background_highlight" />

                <RadioButton
                    android:id="@+id/radio_option2"
                    android:layout_width="126dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:buttonTint="@color/background_highlight"
                    android:text="Hijo(a)"
                    android:textColor="@color/background_highlight" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyConfingFamily"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp"
            android:translationZ="10dp">

            <TextView
                android:id="@+id/tvChallengeDistance"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@color/background_highlight"
                android:onClick="ShowCreateFamily"
                android:text="Crear Familia"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvChallengeDuration"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@color/white"
                android:onClick="ShowUniteFamily"
                android:paddingTop="5dp"
                android:text="Unirte a Familia"
                android:textAlignment="center"
                android:textColor="@color/background_highlight"
                android:textSize="18dp" />

        </LinearLayout>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:text="Cerra Sesion"
            android:onClick="SignOut"
            android:textAlignment="center"
            android:textColor="@color/background_highlight"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>