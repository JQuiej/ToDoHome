<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/drawer_layout_Family"
    tools:context=".activityAddFamily"
    tools:openDrawer="start">


    <LinearLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-4dp">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:text="@string/AddFamily"
            android:textColor="@color/background_highlight"
            android:textSize="30sp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/data"
            android:textColor="@color/background_highlight"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:layout_marginTop="20sp"
            android:src="@drawable/poster_add_family" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                android:text="Rol"
                android:textColor="@color/background_highlight"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_father"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/background_highlight"
                    android:text="Padre o Madre"
                    android:textColor="@color/background_highlight" />

                <RadioButton
                    android:id="@+id/radio_child"
                    android:layout_width="126dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:buttonTint="@color/background_highlight"
                    android:text="Hijo(a)"
                    android:textColor="@color/background_highlight" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                android:text="Familia"
                android:textColor="@color/background_highlight"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radio_group_family"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/background_highlight"
                    android:text="Crear"
                    android:textColor="@color/background_highlight" />

                <RadioButton
                    android:id="@+id/radio_unite"
                    android:layout_width="126dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:buttonTint="@color/background_highlight"
                    android:text="Unirte"
                    android:textColor="@color/background_highlight" />

            </RadioGroup>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <EditText
            android:id="@+id/IdFamily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:hint="Ingrese un codigo de Familia"
            android:textColorHint="@color/background_highlight"
            android:textColor="@color/background_highlight"
            android:textSize="16sp" />

    </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/rounded_logo_background"
            android:onClick="ShowFamily"
            android:text="Ingresar" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>