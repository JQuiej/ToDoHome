<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/drawer_layout_User"
    tools:context=".activityAddFamily"
    tools:openDrawer="start">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-4dp">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:text="@string/dataUser"
            android:textColor="@color/background_highlight"
            android:textSize="30sp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/data"
            android:textColor="@color/background_highlight"
            android:textSize="14sp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageUser"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:rotationX="0"
            android:rotationY="0"
            app:shapeAppearanceOverlay="@style/circular"
            android:src="@drawable/user_image"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/rounded_logo_background"
                android:onClick="SavePhotos"
                android:text="Subir Foto"
                android:textSize="12sp"  />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="7dp"
                android:background="@drawable/rounded_logo_background"
                android:onClick="DeletePhoto"
                android:text="Eliminar Foto"
                android:textSize="12sp"  />

        </LinearLayout>


        <EditText
                android:id="@+id/user_Name"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Nombre"
                android:textColorHint="@color/background_highlight"
                android:textColor="@color/background_highlight"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/User_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Fecha de Nacimiento"
                android:textColorHint="@color/background_highlight"
                android:textColor="@color/background_highlight"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/User_addres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Direccion"
                android:textColorHint="@color/background_highlight"
                android:textColor="@color/background_highlight"
                android:textSize="16sp" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/rounded_logo_background"
            android:onClick="SaveDataUser"
            android:text="Ingresar Datos" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>