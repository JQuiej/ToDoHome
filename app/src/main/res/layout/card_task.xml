<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_field">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start">

            <TextView
                android:id="@+id/txtitletask"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="25dp"
                android:text="titulo"
                android:textColor="@color/background_base"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txdescriptask"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="35dp"
            android:text="descriccion"
            android:textColor="@color/background_highlight"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textRelevanceTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:text="Prioridad:"
                android:textColor="@color/background_highlight"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txtRelevance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Alta"
                android:textColor="@color/background_highlight"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txtDateTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text=""
                android:textColor="@color/background_highlight"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txDatetask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textAlignment="textStart"
                android:text="20-12-2023"
                android:textColor="@color/background_highlight"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/TextUserTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textAlignment="textStart"
                android:text="usuario:"
                android:textColor="@color/background_highlight"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txuserTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:textAlignment="textStart"
                android:text="user"
                android:textColor="@color/background_highlight"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="28dp"
        android:paddingStart="9dp"
        android:paddingEnd="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
            android:id="@+id/btdonetask"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="visible"
            android:background="@drawable/rounded_logo_background"
            android:backgroundTint="@color/azul_highlight"
            android:drawableStart="@drawable/done_task"
            android:paddingTop="9dp"
            android:paddingStart="1dp"/>

            <Button
                android:id="@+id/btClearTask"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_logo_background"
                android:backgroundTint="@color/azul_highlight"
                android:drawableStart="@drawable/baseline_delete_24"
                android:paddingVertical="10dp"
                android:layout_marginStart="5dp"
                android:paddingStart="3dp"/>
        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>