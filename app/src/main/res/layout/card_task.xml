<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="11dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start">

            <TextView
                android:id="@+id/txtitletask"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="25dp"
                android:text="titulo"
                android:textColor="@color/background_highlight"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txdescriptask"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="-210dp"
            android:text="descriccion"
            android:textColor="@color/background_highlight"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btdonetask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:background="@drawable/rounded_logo_background"
            android:text="Realizada" />

    </LinearLayout>
</androidx.cardview.widget.CardView>