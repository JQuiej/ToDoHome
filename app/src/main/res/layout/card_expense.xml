<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_field">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="start">

                <TextView
                    android:id="@+id/txCategoriaExpense"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="25dp"
                    android:text="Categoria"
                    android:textColor="@color/background_base"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtitleExpense"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="35dp"
                    android:text="Title"
                    android:textColor="@color/background_base"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txdescripExpense"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="35dp"
                android:text="descriccion"
                android:textColor="@color/background_highlight"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="35dp"
                    android:text="user:"
                    android:textAlignment="center"
                    android:textColor="@color/background_highlight"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txExpenseUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:text="Jose Pablo Quiej Ramirez"
                    android:textAlignment="center"
                    android:textColor="@color/background_highlight"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txDateExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:textAlignment="textStart"
                    android:text="20-12-2023"
                    android:textColor="@color/background_highlight"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="35dp"
        android:paddingStart="9dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/txCantidadExpense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q50.00"
            android:textColor="@color/background_base"
            android:textSize="25sp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>